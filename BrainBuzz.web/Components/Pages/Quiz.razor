@page "/Quizzes"
@using BrainBuzz.web.Data
@using Microsoft.EntityFrameworkCore
@using BrainBuzz.web.Models.DbTable
@inject ApplicationDbContext _context
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h3>Available Quizzes</h3>

@if (quizzes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        @foreach (var quiz in quizzes)
        {
            <div class="col-md-4 mb-3">
                <div class="quiz-card">
                    <div class="quiz-card-body">
                        <h5 class="quiz-card-title">@quiz.QuizName</h5>
                        <p class="quiz-card-text">@quiz.Description</p>
                        <p class="quiz-card-meta">
                            <i class="fas fa-question-circle"></i> @quiz.TotalQuestions Questions •
                            <i class="fas fa-clock"></i> @quiz.TimeLimit
                        </p>
                        <button class="btn-dashboard primary" @onclick="@(() => StartQuiz(quiz.QuizId))">
                            Start Quiz
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Quizzes> quizzes;

    protected override async Task OnInitializedAsync()
    {
        quizzes = await _context.Quizzes.ToListAsync();
    }

    private Task StartQuiz(int quizId)
    {
        Console.WriteLine($"Redirecting to quiz {quizId}"); // server logs
        Navigation.NavigateTo($"/quiz/{quizId}");
        return Task.CompletedTask;
    }

}

