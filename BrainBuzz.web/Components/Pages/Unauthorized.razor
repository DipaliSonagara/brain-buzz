@page "/unauthorized"
@using BrainBuzz.web.Constants
@layout BlankLayout

<PageTitle>Unauthorized - BrainBuzz</PageTitle>

<div class="auth-container">
    <div class="auth-card animate-scale-in" style="text-align: center;">
        <div style="font-size: 5rem; color: #dc2626; margin-bottom: 1rem;">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        
        <h1 style="font-size: 2rem; font-weight: 700; color: #1e293b; margin-bottom: 0.5rem;">
            Access Denied
        </h1>
        
        <p style="color: #64748b; margin-bottom: 2rem;">
            You don't have permission to access this area.
        </p>
        
        <div style="display: flex; gap: 1rem; justify-content: center;">
            <a href="@AppRoutes.Overview" class="btn btn-primary">
                <i class="fas fa-home"></i>
                Go to Dashboard
            </a>
            
            <a href="@AppRoutes.Login" class="btn btn-outline">
                <i class="fas fa-sign-in-alt"></i>
                Login Again
            </a>
        </div>
    </div>
</div>

